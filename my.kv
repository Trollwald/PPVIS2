<Login>:
    name: "login"
    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "Login: "

            TextInput:
                id: login
                multiline: False

            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False
            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "start"
                    root.manager.transition.direction = "right"
            Button:
                text: "Submit"
                on_release:
                    app.root.current = "coach_data" if passw.text == "1" else "player_data" if passw.text == "2" else "login"
                    root.manager.transition.direction = "left"



