<CustLabel@Label>:
    color: .761, .190, .810, 1
<StartWindow>:
    name: "start"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            CustLabel:
                text: "Player"
                size_hint_x: .80
                font_size:30

            CustLabel:
                text: "Coach"
                size_hint_x: .80
                font_size:30

            CheckBox:
                color:.294, .761, .623
                on_active: root.checkbox_click(self, self.active)
                on_active: app.root.current = "registration_player"
                size_hint_x: .20

            CheckBox:
                on_active: root.checkbox_click(self, self.active)
                on_active: app.root.current = "registration_coach"
                size_hint_x: .20

<Registration_coach>:
    name: "registration_coach"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Label:
                size_hint_x: 1
                text: "FIO "

            TextInput:
                size_hint_x: 1
                id: login
                multiline: False

            Label:
                size_hint_x: 1
                text: "Team "

            TextInput:
                size_hint_x: 1
                id: login
                multiline: False
            Label:
                size_hint_x: 1
                text: "Login: "

            TextInput:
                size_hint_x: 1
                id: login
                multiline: False

            Label:
                size_hint_x: 1
                text: "Password: "

            TextInput:
                size_hint_x: 1
                id: passw
                multiline: False

        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            size_hint_x: .5
            size_hint_y: .5
            text: "Submit"
            on_release:
                app.root.current = "login" if passw.text == "coach" else "registration_coach"
                root.manager.transition.direction = "left"

